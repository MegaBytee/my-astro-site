---
import FormattedDate from "@/components/FormattedDate.astro";
import MainLayout from "./Main.astro";
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import Tag from "@/components/ui/astro/Tag.astro";
import ImageCover from "@/components/ui/preact/ImageCover";
type Props = CollectionEntry<"blog">["data"];

const {
  title,
  description,
  category,
  tags,
  author,
  pubDate,
  updatedDate,
  image,
} = Astro.props;
---

<MainLayout title={title} description={description} image={image?.link}>
  <div class="w-full flex flex-col mx-auto max-w-3xl gap-1 p-3">
    <div class="mt-3">
      <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
        {category}
      </span>
      <h1
        class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-1 lg:leading-tight"
      >
        {title}
      </h1>
      <div class="flex gap-2 items-center flex-wrap md:flex-nowrap">
        <span class="text-gray-400">
          {author}
        </span>
        <span class="text-gray-400">•</span>
        <time class="text-gray-400">
          <FormattedDate date={pubDate} />
        </time>
        <span class="text-gray-400 hidden md:block">•</span>
        <div class="w-full md:w-auto flex flex-wrap gap-3">
          {tags ? tags.map((tag) => <Tag value={tag} />) : ""}
        </div>
      </div>
    </div>
    {
      image ? (
        <ImageCover
          client:load
          className="w-full"
          image={image?.link}
          alt={image.alt}
          source={image.source}
          attrs={image.attrs}
        />
      ) : null
    }

    <div class="mt-6">
      <slot />
    </div>
    <div class="text-center mt-8">
      <a href="/blog" class="btn btn-soft">← Back to Blog</a>
    </div>
  </div>
</MainLayout>
