---
import type { CollectionEntry } from "astro:content";
import PostCard from "@/components/ui/astro/PostCard.astro";

interface Props {
  posts: CollectionEntry<"blog">[];
  title?: string;
}

const { posts = [], title = "All Posts" } = Astro.props as Props;
---

<section class="w-full flex flex-col mx-auto max-w-6xl gap-1">
  <div class="flex flex-col gap-1">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</section>
