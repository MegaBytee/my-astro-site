---
interface Cta {
    text: string;
    href: string;
}

interface Props {
    title: string;
    subtitle?: string;
    showCTA?: boolean;
    primaryCTA?: Cta;
    secondaryCTA?: Cta;
}

const {
    title,
    subtitle,
    showCTA = false,
    primaryCTA,
    secondaryCTA,
} = Astro.props as Props;
---

<section class="w-full py-6">
    <div class="mx-auto max-w-5xl px-4 text-center">
        <h1
            class="text-4xl md:text-6xl font-extrabold tracking-tight text-foreground"
        >
            <span
                class="bg-gradient-to-tl from-slate-100 via-red-900 to-slate-200 bg-clip-text text-transparent"
                >{title}</span
            >
        </h1>
        {
            subtitle && (
                <p class="mt-4 text-lg md:text-xl text-[color:var(--color-text-secondary)] max-w-2xl mx-auto">
                    {subtitle}
                </p>
            )
        }
        {
            showCTA && (primaryCTA || secondaryCTA) && (
                <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
                    {primaryCTA && (
                        <a
                            class="rounded px-6 pb-2 pt-2.5  font-bold  leading-normal transition duration-150 ease-in-out text-slate-100 bg-slate-800 dark:bg-slate-200 dark:text-slate-800 hover:text-slate-200 dark:hover:text-slate-200 dark:hover:bg-slate-700"
                            href={primaryCTA.href}
                        >
                            {primaryCTA.text}
                        </a>
                    )}
                    {secondaryCTA && (
                        <a
                            class="rounded px-6 pb-2 pt-2.5  font-bold  leading-normal transition duration-150 ease-in-out text-slate-100 bg-red-700  dark:text-slate-200 hover:text-slate-200 dark:hover:text-slate-200 dark:hover:bg-slate-700"
                            href={secondaryCTA.href}
                        >
                            {secondaryCTA.text}
                        </a>
                    )}
                </div>
            )
        }
    </div>
</section>
