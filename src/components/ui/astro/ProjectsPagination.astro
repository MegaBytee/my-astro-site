---
interface Props {
  currentPage: number;
  totalPages: number;
  basePath?: string; // e.g. '/blog/page'
}

const {
  currentPage,
  totalPages,
  basePath = "/projects/page",
} = Astro.props as Props;
const prevHref =
  currentPage > 1
    ? currentPage === 2
      ? "/projects/"
      : `${basePath}/${currentPage - 1}/`
    : null;
const nextHref =
  currentPage < totalPages ? `${basePath}/${currentPage + 1}/` : null;
---

{
  totalPages > 1 && (
    <nav
      class="mt-6 flex items-center justify-center gap-3"
      aria-label="Pagination"
    >
      {prevHref ? (
        <a href={prevHref} class="btn btn-soft">
          Previous
        </a>
      ) : (
        <span class="btn btn-soft" style="opacity:.5; pointer-events:none;">
          Previous
        </span>
      )}
      <span class="text-sm text-[color:var(--color-text-muted)]">
        Page {currentPage} of {totalPages}
      </span>
      {nextHref ? (
        <a href={nextHref} class="btn btn-soft">
          Next
        </a>
      ) : (
        <span class="btn btn-soft" style="opacity:.5; pointer-events:none;">
          Next
        </span>
      )}
    </nav>
  )
}
