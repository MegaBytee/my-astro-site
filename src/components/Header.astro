---
import { SITE_TITLE } from "@/consts";
import HeaderLink from "./astro/HeaderLink.astro";
import LogoSvg from "./react/Logo";
import DarkMode from "./react/DarkMode";
import { MobileMenu } from "./react/MobileMenu";
import mbAvatar from "@/assets/mb_logo.png";
import AvatarMotion from "./react/Avatar/AvatarMotion";
---

<header
	class="w-full sticky top-0 z-10 backdrop-blur-lg shadow-xs dark:bg-slate-900"
>
	<div
		class="container flex flex-row justify-between items-start p-5 mx-auto"
	>
		<a
			class="flex flex-row gap-1 items-center justify-center p-1 hover:animate-pulse"
			href="/"
		>
			<AvatarMotion
				client:load
				className="w-10 h-10 rounded-xs"
				src={mbAvatar.src}
				fallback="MB"
				alt="mb-avatar"
			/>
			<LogoSvg
				width="100"
				height="37"
				className="items-center dark:text-amber-50"
			/>
		</a>
		<nav
			class="hidden md:flex gap-6 items-center justify-center text-lg md:ml-auto p-1"
		>
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</nav>
		<div class="flex flex-row justify-end items-end">
			<div
				class="flex items-center justify-center pl-3 ml-3 md:border-l border-gray-200"
			>
				<DarkMode client:load />
			</div>
		</div>
	</div>
</header>
